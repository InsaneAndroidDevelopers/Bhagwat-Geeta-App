<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/shlok_card"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="30dp"
        android:layout_height="match_parent"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="70dp"
        app:cardCornerRadius="8dp"
        android:elevation="8dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="-12dp"
                android:src="@drawable/krishna" />
            <TextView
                android:id="@+id/chapter_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chapter: 1"
                android:layout_margin="5dp"
                android:textSize="18sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/verse_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verse: 1"
                android:layout_margin="5dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp" />
            <TextView
                android:id="@+id/chapter_name"
                android:text="@string/shlokName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/chapter_tv"
                android:textSize="22sp"
                android:textColor="#FF6400"
                />

            <TextView
                android:id="@+id/shlokHead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/chapter_name"
                android:layout_centerHorizontal="true"
                android:text="Slok"
                android:layout_marginTop="10dp"
                android:textSize="22dp"
                android:textStyle="bold|italic"
                />
            <TextView
                android:id="@+id/shlokText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/shlokHead"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="5dp"
                android:text="@string/_47"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:textSize="20sp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/meaningHead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/shlokText"
                android:layout_centerHorizontal="true"
                android:text="Meaning"
                android:layout_marginTop="7dp"
                android:textSize="22dp"
                android:textStyle="bold|italic"
                />
            <TextView
                android:id="@+id/meaningText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/meaningHead"
                android:layout_marginHorizontal="15sp"
                android:layout_marginTop="10dp"
                android:text="@string/meaningText"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="18sp"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>